<head>
  <title><%= settings.name %></title>
  <link rel="icon" type="image/x-icon" href="../assets/favicon.png">
  <script src="https://cdn.tailwindcss.com"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://unpkg.com/@popperjs/core@2.10.1/dist/umd/popper.min.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="bg-zinc-950 text-zinc-100" style="font-family: 'Inter', sans-serif;">
  <div>
    <%- include('../components/navigation') %>
    <div class="md:pl-64 flex flex-col flex-1">
      <main class="flex-1">
        <div class="py-6">
          <%- include('../components/skeleton') %>
          <div class="hidden max-w-7xl mx-auto px-4 sm:px-6 md:px-8" id="content">
            <!-- Header -->
            <div class="pt-2 sm:pt-6 md:pt-8">
              <div class="relative rounded-xl bg-gradient-to-br from-zinc-800/80 to-zinc-900/80 border border-zinc-700/30 shadow-lg mb-6 overflow-hidden">
                <div class="px-4 sm:px-8 py-6 sm:py-8">
                  <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                    <div class="flex-1">
                      <div class="flex items-center">
                        <div class="bg-zinc-800/50 rounded-xl p-3 border border-zinc-800/50">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-400">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                          </svg>
                        </div>
                        <div class="ml-4">
                          <h2 class="text-xl font-semibold text-zinc-200 tracking-tight">Security</h2>
                          <p class="text-sm text-zinc-400">View your Panel credentials and configure security settings</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Security Info Card -->
            <div class="group relative rounded-xl bg-zinc-900/70 border border-zinc-800/50 shadow-lg overflow-hidden mb-8">
              <div class="absolute right-4 top-1/2 -translate-y-1/2 opacity-10 group-hover:opacity-20 transition-opacity">
                <svg xmlns="http://www.w3.org/2000/svg" width="96" height="96" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-400">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
              </div>
              <div class="p-6">
                <div class="space-y-6">
                  <!-- Username -->
                  <div class="flex flex-col md:flex-row md:items-center">
                    <div class="w-full md:w-1/4">
                      <h3 class="text-sm font-medium text-zinc-400">Username</h3>
                    </div>
                    <div class="mt-2 md:mt-0 md:w-3/4">
                      <div class="bg-zinc-800/50 text-zinc-300 px-4 py-2 rounded-lg inline-block">
                        <%= pterodactyl.username %>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Email -->
                  <div class="flex flex-col md:flex-row md:items-center pt-4 border-t border-zinc-800/50">
                    <div class="w-full md:w-1/4">
                      <h3 class="text-sm font-medium text-zinc-400">Email</h3>
                    </div>
                    <div class="mt-2 md:mt-0 md:w-3/4">
                      <div class="bg-zinc-800/50 text-zinc-300 px-4 py-2 rounded-lg inline-block">
                        <%= pterodactyl.email %>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Password -->
                  <div class="flex flex-col md:flex-row pt-4 border-t border-zinc-800/50">
                    <div class="w-full md:w-1/4">
                      <h3 class="text-sm font-medium text-zinc-400">Password</h3>
                    </div>
                    <div class="mt-2 md:mt-0 md:w-3/4">
                      <div class="flex items-center justify-between w-full md:w-3/4 bg-zinc-800/50 rounded-lg px-4 py-3">
                        <div class="flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-500">
                            <path d="M2 18v3c0 .6.4 1 1 1h4v-3h3v-3h2l1.4-1.4a6.5 6.5 0 1 0-4-4Z"/>
                            <circle cx="16.5" cy="7.5" r=".5"/>
                          </svg>
                          <div class="ml-3">
                            <% if (req.session.password) { %>
                              <span class="text-zinc-300 font-medium"><%= req.session.password %></span>
                            <% } else { %>
                              <span class="text-zinc-300 font-medium">••••••••••••••</span>
                            <% } %>
                          </div>
                        </div>
                        <div>
                          <% if (req.session.password) { %>
                            <a href="../security" class="inline-flex items-center px-3 py-1.5 rounded-lg bg-zinc-700/50 text-sm font-medium text-zinc-300 hover:bg-zinc-700 transition-colors">
                              Hide
                            </a>
                          <% } else { %>
                            <a href="../regen" class="inline-flex items-center px-3 py-1.5 rounded-lg bg-zinc-700/50 text-sm font-medium text-zinc-300 hover:bg-zinc-700 transition-colors">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1.5">
                                <path d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                                <path d="M2 12s3-9 10-9 10 9 10 9-3 9-10 9-10-9-10-9Z"/>
                              </svg>
                              Show
                            </a>
                          <% } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Security Tips Card -->
            <div class="group relative rounded-xl bg-zinc-900/70 border border-zinc-800/50 shadow-lg overflow-hidden mb-8">
              <div class="p-6">
                <div class="flex items-center mb-4">
                  <div class="bg-zinc-800/50 rounded-xl p-3 border border-zinc-800/50">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-400">
                      <circle cx="12" cy="12" r="10"/>
                      <path d="M12 16v-4"/>
                      <path d="M12 8h.01"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-medium text-zinc-200 ml-3">Security Tips</h3>
                </div>
                
                <ul class="space-y-3 text-sm text-zinc-400">
                  <li class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-500 mr-2 mt-0.5">
                      <polyline points="9 11 12 14 22 4"/>
                      <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
                    </svg>
                    Use a strong, unique password for your panel account
                  </li>
                  <li class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-500 mr-2 mt-0.5">
                      <polyline points="9 11 12 14 22 4"/>
                      <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
                    </svg>
                    Never share your credentials with anyone
                  </li>
                  <li class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-500 mr-2 mt-0.5">
                      <polyline points="9 11 12 14 22 4"/>
                      <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
                    </svg>
                    Log out when using shared or public computers
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </main>
      <%- include('../components/footer') %>
    </div>
  </div>

  <script>
    // Show content after a brief delay to allow skeleton loader to display
    setTimeout(function() {
      document.getElementById('content').classList.remove('hidden');
    }, 300);
  </script>
</body>