<head>
  <title><%= settings.name %></title>
  <link rel="icon" type="image/x-icon" href="../assets/favicon.png">
  <script src="https://cdn.tailwindcss.com"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://unpkg.com/@popperjs/core@2.10.1/dist/umd/popper.min.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="bg-zinc-950 text-zinc-100" style="font-family: 'Inter', sans-serif;">
  <div>
    <%- include('../components/navigation') %>
    <div class="md:pl-64 flex flex-col flex-1">
      <main class="flex-1">
        <div class="py-6">
          <%- include('../components/skeleton') %>
          <div class="hidden max-w-7xl mx-auto px-4 sm:px-6 md:px-8" id="content">
            <!-- Header -->
            <div class="pt-2 sm:pt-6 md:pt-8">
              <div class="relative rounded-xl bg-gradient-to-br from-zinc-800/80 to-zinc-900/80 border border-zinc-700/30 shadow-lg mb-6 overflow-hidden">
                <div class="px-4 sm:px-8 py-6 sm:py-8">
                  <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                    <div class="flex-1">
                      <div class="flex items-center">
                        <div class="bg-zinc-800/50 rounded-xl p-3 border border-zinc-800/50">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-400">
                            <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/>
                            <circle cx="12" cy="12" r="3"/>
                          </svg>
                        </div>
                        <div class="ml-4">
                          <h2 class="text-xl font-semibold text-zinc-200 tracking-tight">Settings</h2>
                          <p class="text-sm text-zinc-400">Update values in your settings.json file</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Alerts -->
            <% if (req.query.err && req.query.err !== "none") { %>
            <div class="rounded-xl bg-zinc-900/70 border border-zinc-800/50 p-4 mb-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-400">
                    <path d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-md font-medium text-zinc-200">An error occurred</h3>
                  <p class="mt-1 text-sm text-zinc-400">Error code: <code><%= req.query.err %></code></p>
                </div>
              </div>
            </div>
            <% } %>
            <% if (req.query.err && req.query.err == "none") { %>
            <div class="rounded-xl bg-zinc-900/70 border border-zinc-800/50 p-4 mb-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-zinc-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-md font-medium text-zinc-200">Settings updated</h3>
                  <p class="mt-1 text-sm text-zinc-400">Your settings.json file has been updated. You may need to restart the application for some changes to take effect.</p>
                </div>
              </div>
            </div>
            <% } %>

            <!-- Pterodactyl Settings -->
            <div class="group relative rounded-xl bg-zinc-900/70 border border-zinc-800/50 shadow-lg overflow-hidden transition-all duration-300 hover:bg-zinc-800/50 mb-6">
              <div class="absolute right-4 top-1/2 -translate-y-1/2 opacity-10 group-hover:opacity-20 transition-opacity">
                <svg xmlns="http://www.w3.org/2000/svg" width="96" height="96" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-400">
                  <path d="M20.91 8.84 8.56 2.23a1.93 1.93 0 0 0-1.81 0L3.1 4.13a2.12 2.12 0 0 0-.05 3.69l12.22 6.93a2 2 0 0 0 1.94 0L21 12.51a2.12 2.12 0 0 0-.09-3.67Z"/>
                  <path d="m3.09 8.84 12.35-6.61a1.93 1.93 0 0 1 1.81 0l3.65 1.9a2.12 2.12 0 0 1 .1 3.69L8.73 14.75a2 2 0 0 1-1.94 0L3 12.51a2.12 2.12 0 0 1 .09-3.67Z"/>
                  <line x1="12" y1="22" x2="12" y2="13"/>
                </svg>
              </div>
              <div class="relative p-6">
                <h3 class="text-lg font-medium text-zinc-200">Pterodactyl Settings</h3>
                <p class="mt-1 text-sm text-zinc-400 mb-6">Configure your Pterodactyl panel connection</p>

                <div class="space-y-4">
                  <div>
                    <label for="url" class="block text-sm font-medium text-zinc-300">Panel URL <span class="text-zinc-500">(hostname only)</span></label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-500">
                          <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                          <line x1="8" y1="21" x2="16" y2="21"></line>
                          <line x1="12" y1="17" x2="12" y2="21"></line>
                        </svg>
                      </div>
                      <input type="text" id="url" class="bg-zinc-800/50 border border-zinc-700/30 rounded-lg pl-10 pr-4 py-2.5 text-sm text-zinc-200 focus:outline-none focus:ring-2 focus:ring-zinc-500/50 w-full sm:w-1/2" placeholder="panel.example.com">
                    </div>
                  </div>

                  <div>
                    <label for="key" class="block text-sm font-medium text-zinc-300">API Key</label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-500">
                          <path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4"></path>
                        </svg>
                      </div>
                      <input type="text" id="key" class="bg-zinc-800/50 border border-zinc-700/30 rounded-lg pl-10 pr-4 py-2.5 text-sm text-zinc-200 focus:outline-none focus:ring-2 focus:ring-zinc-500/50 w-full sm:w-1/2" placeholder="plta_xxx">
                    </div>
                  </div>
                </div>

                <button onclick="updatePtero()" class="mt-6 inline-flex items-center justify-center px-4 py-2.5 rounded-lg bg-zinc-800/50 text-sm font-medium text-zinc-200 hover:bg-zinc-800 transition-colors group">
                  Update Pterodactyl Settings
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2 transform group-hover:translate-x-0.5 transition-transform">
                    <path d="M5 12h14"/>
                    <path d="m12 5 7 7-7 7"/>
                  </svg>
                </button>
              </div>
            </div>

            <!-- OAuth2 Settings -->
            <div class="group relative rounded-xl bg-zinc-900/70 border border-zinc-800/50 shadow-lg overflow-hidden transition-all duration-300 hover:bg-zinc-800/50">
              <div class="absolute right-4 top-1/2 -translate-y-1/2 opacity-10 group-hover:opacity-20 transition-opacity">
                <svg xmlns="http://www.w3.org/2000/svg" width="96" height="96" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-400">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
              </div>
              <div class="relative p-6">
                <h3 class="text-lg font-medium text-zinc-200">OAuth2 Settings</h3>
                <p class="mt-1 text-sm text-zinc-400 mb-6">Configure your OAuth2 authentication</p>

                <div class="space-y-4">
                  <div>
                    <label for="cID" class="block text-sm font-medium text-zinc-300">Client ID</label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-500">
                          <rect x="3" y="4" width="18" height="16" rx="2"></rect>
                          <rect x="7" y="8" width="10" height="3"></rect>
                        </svg>
                      </div>
                      <input type="text" id="cID" class="bg-zinc-800/50 border border-zinc-700/30 rounded-lg pl-10 pr-4 py-2.5 text-sm text-zinc-200 focus:outline-none focus:ring-2 focus:ring-zinc-500/50 w-full sm:w-1/2" placeholder="Client ID">
                    </div>
                  </div>

                  <div>
                    <label for="cSecret" class="block text-sm font-medium text-zinc-300">Client Secret</label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-500">
                          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                          <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                        </svg>
                      </div>
                      <input type="text" id="cSecret" class="bg-zinc-800/50 border border-zinc-700/30 rounded-lg pl-10 pr-4 py-2.5 text-sm text-zinc-200 focus:outline-none focus:ring-2 focus:ring-zinc-500/50 w-full sm:w-1/2" placeholder="Client Secret">
                    </div>
                  </div>

                  <div>
                    <label for="callbackUrl" class="block text-sm font-medium text-zinc-300">Callback URL <span class="text-zinc-500">(hostname only)</span></label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-500">
                          <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                          <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
                        </svg>
                      </div>
                      <input type="text" id="callbackUrl" class="bg-zinc-800/50 border border-zinc-700/30 rounded-lg pl-10 pr-4 py-2.5 text-sm text-zinc-200 focus:outline-none focus:ring-2 focus:ring-zinc-500/50 w-full sm:w-1/2" placeholder="example.com">
                    </div>
                  </div>
                </div>

                <button onclick="updateOAuth2()" class="mt-6 inline-flex items-center justify-center px-4 py-2.5 rounded-lg bg-zinc-800/50 text-sm font-medium text-zinc-200 hover:bg-zinc-800 transition-colors group">
                  Update OAuth2 Settings
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2 transform group-hover:translate-x-0.5 transition-transform">
                    <path d="M5 12h14"/>
                    <path d="m12 5 7 7-7 7"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </main>
      <%- include('../components/footer') %>
    </div>
  </div>

  <script>
    // Show content after a brief delay to allow skeleton loader to display
    setTimeout(function() {
      document.getElementById('content').classList.remove('hidden');
    }, 300);

    function updatePtero() {
      const urlInput = document.getElementById('url');
      const keyInput = document.getElementById('key');

      /* Update Pterodactyl settings */
      const url = 'https://' + urlInput.value;
      const key = keyInput.value;

      fetch(`/settings/update?setting=pterodactyl.domain&value=${encodeURIComponent(url)}`)
        .then(response => {
          if (response.ok) {
            fetch(`/settings/update?setting=pterodactyl.key&value=${encodeURIComponent(key)}`)
              .then(response => {
                if (response.ok) {
                  // Redirect to /settings?err=none if both requests worked
                  window.location.href = '/settings?err=none';
                } else {
                  throw new Error('Failed to update Pterodactyl key');
                }
              })
              .catch(error => {
                console.error('Error:', error);
                alert('Failed to update Pterodactyl settings')
              });
          } else {
            throw new Error('Failed to update Pterodactyl domain');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Failed to update Pterodactyl settings');
        });
    }

    function updateOAuth2() {
      const idInput = document.getElementById('cID');
      const secretInput = document.getElementById('cSecret');
      const urlInput = document.getElementById('callbackUrl');

      /* Update OAuth2 settings */
      const id = idInput.value;
      const secret = secretInput.value;
      const url = 'https://' + (urlInput.value).replace('/callback', '');

      fetch(`/settings/update?setting=api.client.oauth2.id&value=${encodeURIComponent(id)}`)
        .then(response => {
          if (response.ok) {
            fetch(`/settings/update?setting=api.client.oauth2.secret&value=${encodeURIComponent(secret)}`)
              .then(response => {
                if (response.ok) {
                  fetch(`/settings/update?setting=api.client.oauth2.link&value=${encodeURIComponent(url)}`)
                    .then(response => {
                      if (response.ok) {
                        // Redirect to /settings?err=none if both requests worked
                        window.location.href = '/settings?err=none';
                      } else {
                        throw new Error('Failed to update OAuth2');
                      }
                    })
                    .catch(error => {
                      console.error('Error:', error);
                      alert('Failed to update OAuth2')
                    });
                } else {
                  throw new Error('Failed to update OAuth2');
                }
              })
              .catch(error => {
                console.error('Error:', error);
                alert('Failed to update OAuth2')
              });
          } else {
            throw new Error('Failed to update OAuth2');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Failed to update OAuth2');
        });
    }
  </script>
</body>